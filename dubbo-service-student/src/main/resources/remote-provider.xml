<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans.xsd
            http://code.alibabatech.com/schema/dubbo
           http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="dubbo-student-provider"  />

    <dubbo:registry address="${dubbo_zookeeper_address}" />

    <dubbo:protocol name="dubbo" port="20880" />

    <!-- failover (切换其他服务请求)
         failfast（非幂等性操作，一次失败，立即返回失败信息 (failover模式下 retry=0 效果一样))
         failsafe（失败就忽律，继续执行）
         failback（失败后台记录，定时重发）
         forking  （并行调用多个服务，一个成功就返回） -->
    <dubbo:service  interface="cn.zw.facade.service.StudentFacade" ref="studentFacadeImpl" />


</beans>